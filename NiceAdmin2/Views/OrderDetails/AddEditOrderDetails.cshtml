@model NiceAdmin2.Models.OrderDetailModel;
@{
Layout = "_Layout";
}

<div id="main">
    <div class="card">
        <div class="card-body p-3">
            <h5>Add New Order Details Entry</h5>
            <form method="post" asp-action="Save" asp-controller="OrderDetails">
                @Html.HiddenFor(x=>x.OrderDetailID)
                <div class="container">
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="UserID">Select User:<span class="text-danger">*</span></label><br/>
                            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                <option value="">Select User</option>
                            </select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="OrderID">Select Order ID:<span class="text-danger">*</span></label><br/>
                            <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderID"))">
                                <option value="">Select Order ID</option>
                            </select>
                            <span asp-validation-for="OrderID" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="ProductID">Select Product:<span class="text-danger">*</span></label><br/>
                            <select class="form-control" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
                                <option value="">Select Product</option>
                            </select>
                            <span asp-validation-for="ProductID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="Quantity">Enter Quantity:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Quantity" asp-for="Quantity"/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="Amount">Enter Amount:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Amount" asp-for="Amount"/>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="TotalAmount">Enter Total Amount:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Total Amount" asp-for="TotalAmount"/>
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-2 m-3">
                            <input type="submit" class="btn btn-primary" placeholder="Submit"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
