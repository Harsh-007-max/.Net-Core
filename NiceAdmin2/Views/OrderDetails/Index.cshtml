@model System.Data.DataTable;
@using System.Data;
@{
    Layout ="_Layout";
}
<main id="main" class="main">

    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <h5 class="col-3 card-title">Order Details Table</h5>
                        <h5 class="col"></h5>
                        <h5 class="col-1 my-2 ml-2">
                            <a class="btn btn-primary"  asp-action="AddEditOrderDetails">Add+</a>
                        </h5>
                    </div>

                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">OrderDetail ID</th>
                            <th scope="col">Order ID</th>
                            <th scope="col">Product ID</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Total Amount</th>
                            <th scope="col">User ID</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (DataRow OrderDetail in Model.Rows)
                        {
                            
                            <tr>
                                <th scope="row">@OrderDetail["OrderDetailID"]</th>
                                <th scope="row">@OrderDetail["OrderID"]</th>
                                <th scope="row">@OrderDetail["ProductID"]</th>
                                <td>@OrderDetail["Quantity"]</td>
                                <td>@OrderDetail["Amount"]</td>
                                <td>@OrderDetail["TotalAmount"]</td>
                                <td>@OrderDetail["UserID"]</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <form asp-controller="OrderDetails" asp-action="DeleteOrderDetail">
                                        <input type="hidden" name="OrderDetailID" value="@OrderDetail["OrderDetailID"]" />
                                        <button class="btn btn-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </div>
</main>
