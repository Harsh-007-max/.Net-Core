@model NiceAdmin2.Models.CustomerModel;
@{
    Layout = "_Layout";
}
<div id="main">
    <div class="card">
        <div class="card-body p-3">
            <h5>Add New Customer</h5>
            <form method="post" asp-action="Save" asp-controller="Customer">
                @Html.HiddenFor(x=>x.CustomerId)
                <div class="container">
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="UserID">Enter User ID:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="User ID" asp-for="UserID"/>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col-4">
                            <label class="form-label" asp-for="CustomerName">Enter Customer Name:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Customer Name" asp-for="CustomerName"/>
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="HomeAddress">Enter Home Address:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Home Address" asp-for="HomeAddress"/>
                            <span asp-validation-for="HomeAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="MobileNo">Enter Mobile Number:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Mobile Number" asp-for="MobileNo"/>
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="Email">Enter Email:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Email" asp-for="Email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="CityName">Enter City Name:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="City Name" asp-for="CityName"/>
                            <span asp-validation-for="CityName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="PinCode">Enter Pin Code:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Pin Code" asp-for="PinCode"/>
                            <span asp-validation-for="PinCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            <label class="form-label" asp-for="NetAmount">Enter Net Amount:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="Net Amount" asp-for="NetAmount"/>
                            <span asp-validation-for="NetAmount" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label class="form-label" asp-for="GSTNO">Enter GST Number:<span class="text-danger">*</span></label><br/>
                            <input class="form-control" type="text" placeholder="GST Number" asp-for="GSTNO"/>
                            <span asp-validation-for="GSTNO" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-2 m-3">
                            <input type="submit" class="btn btn-primary" placeholder="Submit"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
