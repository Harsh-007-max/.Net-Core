@model CRUD.Models.OrderModel;

@{
    Layout = "_Layout";
}
<div id="main">
    <div class="card">
        <div class="card-body p-3">
            <h5>@ViewBag.Title</h5>
            <form method="post" asp-action="OrderSave" asp-controller="Order">
                @Html.HiddenFor(x=>x.OrderID)
                <div class="container">
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.UserID,"Select User ID:",new {@class="form-label"})
                            @Html.DropDownListFor(m => m.UserID, new SelectList(ViewBag.UserList, "UserID", "UserName"), "Select User",new {@class="form-control"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.CustomerID,"Select Customer ID:",new {@class="form-label",})
                            @Html.DropDownListFor(m => m.CustomerID, new SelectList(ViewBag.CustomerList, "CustomerID", "CustomerName"), "Select Customer",new {@class="form-control"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.OrderDate,"Enter Order Date:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.OrderDate,new {@class="form-control",@type="date",@placeholder="00/00/00"})
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.ShippingAddress,"Enter Shipping Address:",new{@class="form-label"})
                            @Html.TextAreaFor(m=>m.ShippingAddress,new{@class="form-control",@placeholder="Shipping Address"})
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.PaymentMode,"Enter Payment Mode:",new{@class="form-label"})
                            @Html.TextBoxFor(m=>m.PaymentMode,new{@class="form-control",@placeholder="Payment Mode"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.TotalAmount,"Enter Total Amount:",new{@class="form-label"})
                            @Html.TextBoxFor(m=>m.TotalAmount,new{@class="form-control",@placeholder="Total Amount"})
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-2 m-3">
                            <input type="submit" class="btn btn-primary"  placeholder="Submit"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
