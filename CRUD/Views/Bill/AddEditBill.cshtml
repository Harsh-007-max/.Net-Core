@model CRUD.Models.BillsModel;
@{
    Layout = "_Layout";
}
<div id="main">
    <div class="card">
        <div class="card-body p-3">
            <h5>Add New Bill</h5>
            <form method="post" asp-action="SaveBill" asp-controller="Bill">
                @Html.HiddenFor(x=>x.BillId)
                <div class="container">
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.UserID,"Select User:",new {@class="form-label"})
                            @Html.DropDownListFor(m => m.UserID, new SelectList(ViewBag.UserList, "UserID", "UserName"), "Select User",new {@class="form-control"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.OrderID,"Select Order ID:",new {@class="form-label"})
                            @Html.DropDownListFor(m => m.OrderID, new SelectList(ViewBag.OrderList, "OrderID", "OrderID"), "Select Order ID",new {@class="form-control"})
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.BillNumber,"Enter Bill Number:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.BillNumber,new { @class="form-control",@Placeholder="Bill Number"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.BillDate,"Enter Bill Date:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.BillDate,new { @class="form-control",@type="date",@placeholder="Bill Date"})
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.Discount,"Enter Discount:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.Discount,new { @class="form-control",@Placeholder="Discount"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.TotalAmount,"Enter Total Amount:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.TotalAmount,new { @class="form-control",@Placeholder="Total Amount"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.NetAmount,"Enter Net amount:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.NetAmount,new { @class="form-control",@placeholder="Net amount"})
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-2 m-3">
                            <button type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

