@model CRUD.Models.ProductModel;

@{
    Layout = "_Layout";
}
<div id="main">
    <div class="card">
        <div class="card-body p-3">
            <h5>Add New Product</h5>
            <form method="post" asp-action="ProductSave" asp-controller="Product">
                @Html.HiddenFor(x=>x.ProductID)
                <div class="container">
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.UserID,"Select User:",new {@class="form-label"})
                            @Html.DropDownListFor(m => m.UserID, new SelectList(ViewBag.UserList, "UserID", "UserName"), "Select User",new {@class="form-control"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.ProductName,"Enter Product Name:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.ProductName,new {@class="form-control",@placeholder="Product Name"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.ProductPrice,"Enter Product Price:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.ProductPrice,new {@class="form-control",@placeholder="Product Price"})
                        </div>
                    </div>
                    <div class="row m-2 my-4">
                        <div class="col">
                            @Html.LabelFor(m=>m.ProductCode,"Enter Product Code:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.ProductCode,new {@class="form-control",@placeholder="Product Code"})
                        </div>
                        <div class="col">
                            @Html.LabelFor(m=>m.Description,"Enter Product Description:",new {@class="form-label"})
                            @Html.TextBoxFor(m=>m.Description,new {@class="form-control",@placeholder="Product Description"})
                        </div>
                    </div>
                    <div class="row m-2">
                        <div class="col-2 m-3">
                            <input type="submit" class="btn btn-primary" placeholder="Submit"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
