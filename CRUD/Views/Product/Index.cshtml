@model System.Data.DataTable;
@using System.Data;
@{
    Layout ="_Layout";
}
<main id="main" class="main">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <h5 class="col-3 card-title">Product Table</h5>
                        <h5 class="col"></h5>
                        <h5 class="col-1 my-2 ml-2">
                            <a class="btn btn-primary" asp-controller="Product" asp-action="AddEditProduct">Add+</a>
                        </h5>
                    </div>
                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Price</th>
                            <th scope="col">Product Code</th>
                            <th scope="col">Description</th>
                            <th scope="col">User ID</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (DataRow product in Model.Rows)
                        {
                            
                        <tr>
                            <th scope="row">@product["ProductID"]</th>
                            <td>@product["ProductName"]</td>
                            <td>@product["ProductPrice"]</td>
                            <td>@product["ProductCode"]</td>
                            <td>@product["Description"]</td>
                            <td>@product["UserID"]</td>
                            <td>
                                <button class="btn btn-primary">Edit</button>
                                <form asp-controller="Product" asp-action="DeleteProduct">
                                    <input type="hidden" name="ProductID" value="@product["ProductID"]" />
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </div>
</main>
